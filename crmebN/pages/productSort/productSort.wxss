.nav {
  white-space: nowrap;
}

.buttonFalse{
  background-color: #f8931f !important;
}

.buttonTrue{
  background-color: #b3b3b3;
}

::-webkit-scrollbar {
  display: none;
}

.nav .cu-item {
  height: 90rpx;
  display: inline-block;
  line-height: 90rpx;
  margin: 0 10rpx;
  padding: 0 20rpx;
}

.nav .cu-item.cur {
  border-bottom: 4rpx solid;
}

.flex-sub {
  flex: 1;
}

.pL-Text{
  padding-left: 115rpx;
}

.pL-Num{
  padding-left: 115rpx;
}

.justify-between {
  justify-content: space-between;
}

.screen-swiper {
  min-height: 320rpx;
}

.screen-swiper image {
  width: 100%;
  display: block;
  height: 100%;
  margin: 0;
}

.screen-swiperTwo{
  width: 100%;
  height: 100%;
}

.screen-swiperTwo image {
  width: 100%;
  display: block;
  height: 100%;
  margin: 0;
}

/*用来包裹所有的小圆点  */
.dots{  
  height: 15rpx; 
  display: flex;
  flex-direction: row;
  position: absolute;
  right: 0px;
  bottom: 5px;
}  
/*未选中时的小圆点样式 */
.dot{  
  width: 15rpx;  
  border-radius: 50%;
  margin-right: 26rpx;
  background-color: white;
}  
/*选中以后的小圆点样式  */
.active{  
  background-color:#ccc;
} 

.cu-list-two.menu {
  display: block;
  overflow: hidden;
}

.cu-list-two+.cu-list {
  margin-top: 30rpx;
}

.cu-list-two.menu>.cu-item {
  position: relative;
  display: flex;
  min-height: 100rpx;
  background: #fff;
  padding: 30rpx 30rpx;
}

.cu-list-two.menu>.cu-item::after {
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: inherit;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ddd;
}

.cu-list-two.menu>.cu-item:last-child::after {
  border: none;
}

.cu-list-two.menu>.cu-item .content {
  overflow:hidden;
  line-height: 1.6em;
  flex: 1;
  font-size: 30rpx;
}

